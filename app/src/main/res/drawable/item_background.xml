<!-- item_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="45"
        android:startColor="?attr/colorPrimary"
        android:endColor="?attr/colorPrimary"
        android:type="linear" />
    <corners
        android:radius="8dp" />
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />
</shape>
