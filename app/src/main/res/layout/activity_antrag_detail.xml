<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/titelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/beschreibungTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titelTextView"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/downloadPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beschreibungTextView"
        android:layout_marginTop="16dp"
        android:text="PDF Herunterladen"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:elevation="4dp" />

</RelativeLayout>
